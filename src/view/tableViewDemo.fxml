<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
   <children>
      <VBox>
         <children>
            <TableView fx:id="carTableView">
              <columns>
                  <TableColumn fx:id="carIDColumn" prefWidth="75.0" text="Car ID" />
                <TableColumn fx:id="carNameColumn" prefWidth="75.0" text="Car Name" />
                <TableColumn fx:id="carColorColumn" prefWidth="75.0" text="Car Color" />
                  <TableColumn fx:id="carYearColumn" prefWidth="75.0" text="Car Year" />
              </columns>
            </TableView>
            <Button mnemonicParsing="false" onAction="#loadCarDetails" text="Load" />
         </children>
      </VBox>
   </children>
</AnchorPane>
